{
  "name": "swift-milkdown",
  "version": "1.0.0",
  "description": "Milkdown-based WYSIWYG Markdown editor for Swift/SwiftUI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rm -rf Sources/SwiftMilkdown/Resources/Editor node_modules .build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "wysiwyg",
    "milkdown",
    "swift",
    "swiftui",
    "wkwebview"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@milkdown/kit": "^7.18.0",
    "@milkdown/plugin-emoji": "^7.18.0",
    "@milkdown/plugin-prism": "^7.18.0",
    "@milkdown/prose": "^7.18.0",
    "@milkdown/theme-nord": "^7.18.0",
    "prism-themes": "^1.9.0"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "vite": "7.3.1"
  }
}
